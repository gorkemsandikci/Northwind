@using Microsoft.EntityFrameworkCore
@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Employees";
}

<div class="container p-2">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i>
                Create
            </a>
        </div>
    </div>
</div>

<table class="table table-hover">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Age</th>
        <th scope="col">Title</th>
        <th scope="col">Work Year</th>
        <th scope="col">City</th>
        <th scope="col"></th>
        <th scope="col">Phone</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var item in Model)
    {
        <tr>
            <th scope="row">@item.EmployeeId</th>
            <td>@item.FirstName @item.LastName </td>
            <td> @(DateTime.Now.Year-item.BirthDate.Value.Year)</td>
            <td>@item.TitleOfCourtesy @item.Title</td>
            <td> @(DateTime.Now.Year-item.HireDate.Value.Year)</td>
            <td>@item.City, @item.PostalCode / @item.Country</td>
            <td> </td>
            <td>@item.HomePhone</td>
        </tr>
    }
    </tbody>
</table>