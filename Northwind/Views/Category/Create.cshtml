@model Category

@{
    ViewData["Title"] = "Create Category";
}

<div class="container mt-4">
    <form method="post">
        <legend class="text-primary">Create Category</legend>
        <fieldset>
            <div class="form-group">
                <label asp-for="CategoryName"  class="form-label mt-4">Category Name:</label>
                <input asp-for="CategoryName" class="form-control" placeholder="Place Enter Category Name">
                <small id="CategoryName" class="form-text text-muted">You should add category name, you can edit later..</small>
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
        </fieldset>
        <fieldset>
            <div class="form-group">
                <label asp-for="Description" class="form-label mt-4">Description:</label>
                <input asp-for="Description" class="form-control" placeholder="Place Enter Description">
                <small id="Description" class="form-text text-muted">You should add description, you can edit later..</small>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </fieldset>
        
        <fieldset class="mt-4 text-center">
            <button type="submit" class="btn btn-outline-success">
                <i class="bi bi-plus-circle"></i>
                Create Category
            </button>
            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary">Back To List</a>
        </fieldset>
    </form>
</div>

@section scripts {
    <partial name = "_ValidationScriptsPartial"/>
}